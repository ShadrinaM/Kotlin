<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#474A51"
    tools:context=".MainActivity">

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#000000"
        app:columnCount="4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:rowCount="8">

        <!-- Кнопки -->
        <Button
            android:id="@+id/button0"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:backgroundTint="#2c2c2c"
            android:text="@string/_0"
            android:textColor="#FFFFFF"
            android:textColorLink="#808080"
            android:textSize="34sp"
            app:layout_column="0"
            app:layout_columnSpan="2"
            app:layout_columnWeight="1"
            app:layout_row="7"
            app:layout_rowWeight="2" />

        <Button
            android:id="@+id/button1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:backgroundTint="#2c2c2c"
            android:text="@string/_1"
            android:textColor="#FFFFFF"
            android:textColorLink="#808080"
            android:textSize="34sp"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_row="6"
            app:layout_rowWeight="2" />

        <Button
            android:id="@+id/button2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:backgroundTint="#2c2c2c"
            android:text="@string/_2"
            android:textColor="#FFFFFF"
            android:textColorLink="#808080"
            android:textSize="34sp"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_row="6"
            app:layout_rowWeight="2" />

        <Button
            android:id="@+id/button5"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:backgroundTint="#2c2c2c"
            android:text="@string/_5"
            android:textColor="#FFFFFF"
            android:textColorLink="#808080"
            android:textSize="34sp"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_row="5"
            app:layout_rowWeight="2" />

        <Button
            android:id="@+id/button8"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:backgroundTint="#2c2c2c"
            android:text="@string/_8"
            android:textColor="#FFFFFF"
            android:textColorLink="#808080"
            android:textSize="34sp"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_row="4"
            app:layout_rowWeight="2" />

        <Button
            android:id="@+id/button3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:backgroundTint="#2c2c2c"
            android:text="@string/_3"
            android:textColor="#FFFFFF"
            android:textColorLink="#808080"
            android:textSize="34sp"
            app:layout_column="2"
            app:layout_columnWeight="1"
            app:layout_row="6"
            app:layout_rowWeight="2" />

        <Button
            android:id="@+id/button6"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:backgroundTint="#2c2c2c"
            android:text="@string/_6"
            android:textColor="#FFFFFF"
            android:textColorLink="#808080"
            android:textSize="34sp"
            app:layout_column="2"
            app:layout_columnWeight="1"
            app:layout_row="5"
            app:layout_rowWeight="2" />

        <Button
            android:id="@+id/button9"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:backgroundTint="#2c2c2c"
            android:text="@string/_9"
            android:textColor="#FFFFFF"
            android:textColorLink="#808080"
            android:textSize="34sp"
            app:layout_column="2"
            app:layout_columnWeight="1"
            app:layout_row="4"
            app:layout_rowWeight="2" />

        <!-- Кнопка удаления последнего символа -->
        <!--
        <Button
            android:id="@+id/buttonDel"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:backgroundTint="#545454"
            android:text="@string/del"
            android:textColor="#FFFFFF"
            android:textColorLink="#808080"
            android:textSize="34sp"
            app:layout_column="2"
            app:layout_columnWeight="1"
            app:layout_row="3"
            app:layout_rowWeight="2" />
        -->
        <!-- Кнопка для изменения знака числа -->
        <!--
        <Button
            android:id="@+id/buttonNegative"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:backgroundTint="#545454"
            android:text="@string/_negative"
            android:textColor="#FFFFFF"
            android:textColorLink="#808080"
            android:textSize="34sp"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_row="3"
            app:layout_rowWeight="2" />
        -->
        <Button
            android:id="@+id/buttonPlus"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:backgroundTint="#545454"
            android:text="@string/_plus"
            android:textColor="#FFFFFF"
            android:textColorLink="#808080"
            android:textSize="34sp"
            app:layout_column="3"
            app:layout_columnWeight="1"
            app:layout_row="6"
            app:layout_rowWeight="2" />

        <Button
            android:id="@+id/buttonMinus"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:backgroundTint="#545454"
            android:text="@string/_minus"
            android:textColor="#FFFFFF"
            android:textColorLink="#808080"
            android:textSize="34sp"
            app:layout_column="3"
            app:layout_columnWeight="1"
            app:layout_row="5"
            app:layout_rowWeight="2" />

        <Button
            android:id="@+id/buttonMult"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:backgroundTint="#5D5D5D"
            android:text="@string/_mult"
            android:textColor="#FFFFFF"
            android:textColorLink="#808080"
            android:textSize="34sp"
            app:layout_column="3"
            app:layout_columnWeight="1"
            app:layout_row="4"
            app:layout_rowWeight="2" />

        <Button
            android:id="@+id/buttonDiv"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:backgroundTint="#545454"
            android:text="@string/_div"
            android:textColor="#FFFFFF"
            android:textColorLink="#808080"
            android:textSize="34sp"
            app:layout_column="3"
            app:layout_columnWeight="1"
            app:layout_row="3"
            app:layout_rowWeight="2" />

        <Button
            android:id="@+id/buttonEquals"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:backgroundTint="#cfbafd"
            android:text="@string/_equals"
            android:textColor="#FFFFFF"
            android:textColorLink="#808080"
            android:textSize="34sp"
            app:layout_column="3"
            app:layout_columnWeight="1"
            app:layout_row="7"
            app:layout_rowWeight="2" />

        <Button
            android:id="@+id/buttonDot"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:backgroundTint="#2c2c2c"
            android:text="@string/_dot"
            android:textColor="#FFFFFF"
            android:textColorLink="#808080"
            android:textSize="34sp"
            app:layout_column="2"
            app:layout_columnWeight="1"
            app:layout_row="7"
            app:layout_rowWeight="2" />

        <Button
            android:id="@+id/button4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:backgroundTint="#2c2c2c"
            android:text="@string/_4"
            android:textColor="#FFFFFF"
            android:textColorLink="#808080"
            android:textSize="34sp"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_row="5"
            app:layout_rowWeight="2" />

        <Button
            android:id="@+id/button7"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:backgroundTint="#2c2c2c"
            android:text="@string/_7"
            android:textColor="#FFFFFF"
            android:textColorLink="#808080"
            android:textSize="34sp"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_row="4"
            app:layout_rowWeight="2" />

        <Button
            android:id="@+id/buttonC"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:backgroundTint="#545454"
            android:text="@string/c"
            android:textColor="#FFFFFF"
            android:textColorLink="#808080"
            android:textSize="34sp"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_row="3"
            app:layout_rowWeight="2" />

        <!-- EditText -->
        <EditText
            android:id="@+id/EditTextCur"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:hint="@string/_vod"
            android:inputType="number|numberDecimal|numberSigned"
            android:text=""
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:textSize="34sp"
            app:layout_column="0"
            app:layout_columnSpan="4"
            app:layout_columnWeight="1"
            app:layout_row="2"
            app:layout_rowWeight="2" />

        <!-- TextView -->
        <TextView
            android:id="@+id/textViewSign"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:hint="@string/__"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            app:layout_column="3"
            app:layout_columnSpan="1"
            app:layout_columnWeight="1"
            app:layout_row="1"
            app:layout_rowWeight="1"
            tools:text="@string/__" />

        <TextView
            android:id="@+id/textViewNum"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:hint="@string/__"
            android:text="@string/__"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            app:layout_column="3"
            app:layout_columnSpan="1"
            app:layout_columnWeight="1"
            app:layout_row="0"
            app:layout_rowWeight="1" />
    </androidx.gridlayout.widget.GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>